<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ClosingDateandMonthValidationRule</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISNULL( ClosingDate__c ) , ISPICKVAL( Month__c , &apos;&apos;) )</errorConditionFormula>
    <errorMessage>One of the two fields Closing Date or Month must be filled in!</errorMessage>
</ValidationRule>
