    <decisions>
        <name>Check_Measurement</name>
        <label>Check Measurement</label>
        <locationX>1041</locationX>
        <locationY>317</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Measurement_TotalCBM_is_changed</name>
            <conditionLogic>1 AND (2 OR 3)</conditionLogic>
            <conditions>
                <leftValueReference>$Record.MeasurementTotalCBM__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>$Record__Prior.MeasurementTotalCBM__c</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>OceanExport</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>OceanImport</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_all_F_TMS_Bills</targetReference>
            </connector>
            <label>Measurement TotalCBM is changed</label>
        </rules>
        <rules>
            <name>Chargeable_weight_is_changed</name>
            <conditionLogic>1 AND (2 OR 3)</conditionLogic>
            <conditions>
                <leftValueReference>$Record.ChargeableWeight__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>$Record.ChargeableWeight__c</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>AirExport</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>AirImport</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_all_F_TMS_Bills</targetReference>
            </connector>
            <label>Chargeable weight is changed</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>ChargeQuantity</name>
        <dataType>Number</dataType>
        <expression>CASE({!Loop_through_Bills.ChargeUnit__c},
        &apos;CBM&apos;,{!ChargeUnitCBM},
        &apos;Container&apos;,{!ChargeUnitCBM},
        &apos;Kg&apos;, {!ChargeUnitKg},NULL)</expression>
        <scale>3</scale>
    </formulas>
    <formulas>
        <name>ChargeUnit</name>
        <dataType>String</dataType>
        <expression>IF({!Chargeable_weight_is_changed},&apos;Kg&apos;,IF({!Measurement_TotalCBM_is_changed},&apos;CBM&apos;,&apos;&apos;))</expression>
    </formulas>
    <formulas>
        <name>ChargeUnitCBM</name>
        <dataType>Number</dataType>
        <expression>IF(({!$Record.MeasurementTotalCBM__c}*1000)&gt;{!$Record.GrossWeight__c},
{!$Record.MeasurementTotalCBM__c},
{!$Record.GrossWeight__c}/1000)</expression>
        <scale>4</scale>
    </formulas>
    <formulas>
        <name>ChargeUnitKg</name>
        <dataType>Number</dataType>
        <expression>IF(
	AND(
	{!$Record.GrossWeight__c}&gt;{!$Record.ChargeableWeight__c},
		OR(
			{!$Record.RecordType.DeveloperName} = &apos;AirExport&apos;,
			{!$Record.RecordType.DeveloperName} =&apos;AirImport&apos;
			)),
{!$Record.GrossWeight__c},{!$Record.ChargeableWeight__c})</expression>
        <scale>4</scale>
    </formulas>
