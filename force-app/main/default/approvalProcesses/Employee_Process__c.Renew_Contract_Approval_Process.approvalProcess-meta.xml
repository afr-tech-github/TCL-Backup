                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Employee_Process__c.RenewStatus__c</field>
                <operation>equals</operation>
                <value>HR Approved</value>
            </criteriaItems>
        </entryCriteria>
        <label>BOD Approved</label>
        <name>BOD_Approved</name>
        <rejectBehavior>
            <type>RejectRequest</type>
